{
  "tests": [
    {
      "pattern": "*.unit.js",
      "command": "yarn unit-test ${filePath}",
      "debugCommand": "",
      "filesToWatch": []
    },
    {
      "pattern": "*.it.js",
      "command": "grunt someTask -test=*${fileName}*",
      "debugCommand": "grunt someOtherTask -test=*${fileName}* --debug",
      "filesToWatch": [
        ".json",
        ".jsx"
      ],
      "ignoreOnWatch": [
        "*/dist/**/*.js"
      ]
    }
  ],
  "filesToWatch": [
    ".js"
  ]
}
